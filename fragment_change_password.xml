<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chngPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dip"
        android:layout_marginTop="100dip"
        android:text="Enter your new password"
        android:textSize="20dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/changepass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dip"
        android:text="Change Password"/>

    <EditText
        android:id="@+id/chgpassedt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
       android:layout_below="@id/chngPwd"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="70dip"
        android:hint="Password" />

    <EditText
        android:id="@+id/chgpassedt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/chgpassedt"
        android:layout_marginLeft="70dip"
        android:hint="Confirmed Password" />



</RelativeLayout>