<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ui.home.HomeFragment">

    <Button
        android:id="@+id/newAttendanceButton"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:text="New Attendance"
        app:layout_constraintBottom_toTopOf="@+id/viewReportButton"
        app:layout_constraintDimensionRatio="h,3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="16dp"
        android:textColor="@color/textColor"
        android:background="@drawable/action_button"/>

    <Button
        android:id="@+id/viewReportButton"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:text="View Report"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newAttendanceButton"
        android:elevation="16dp"
        android:textColor="@color/textColor"
        android:background="@drawable/action_button"/>

</LinearLayout>